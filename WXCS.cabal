name: WXCS
version: 0.1
author: asi1024
synopsis: Wonderful eXciting Contest System
cabal-version: >= 1.10
build-type: Simple

executable main
    Hs-source-dirs: src
    Default-Language: Haskell2010
    main-is:  Main.hs
    build-depends: base >= 4 && < 5
                   , blaze-html == 0.7.0.0
                   , bytestring == 0.10.4.0
                   , conduit == 1.0.12
                   , filepath == 1.3.0.1
                   , hamlet == 1.1.7.6
                   , http-conduit == 2.0.0.4
                   , http-types == 0.8.3
                   , persistent == 1.3.0.2
                   , persistent-sqlite == 1.3.0.1
                   , persistent-template == 1.3.1
                   , text == 1.0.0.1
                   , time == 1.4.1
                   , transformers == 0.3.0.0
                   , scotty == 0.6.2
                   , wai-extra == 2.0.3.3
                   , wai-middleware-static == 0.4.0.2
                   , xml == 1.3.13

    ghc-options:   -Wall
    extra-libraries: pthread
